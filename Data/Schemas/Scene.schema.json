{
  "$id": "https://i3t-tool.org/Scene.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Scene",
  "type": "object",
  "properties": {
    "workspace": {
      "operators": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/operator"
        }
      },
      "transforms": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/transform"
        }
      },
      "edges": {
        "type": "array",
        "items": {
          "type": "#/$defs/edge"
        }
      }
    }
  },
  "$defs": {
    "operator": {
      "type": "object",
      "required": [ "id", "type", "position" ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "position": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        }
      }
    },
    "transform": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "position": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        }
      }
    },
    "edge": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "type": "number"
      }
    }
  }
}